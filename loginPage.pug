- var pageTitle = "Sign in";

doctype html
html(lang="en")
  head
    include includes/meta.pug
    include includes/style.pug
    title #{pageTitle}
  body
    #emad-app
      .containers
        .left-container
          img(class="logo", src="../img/logoWhite.png",alt="Logo")
          .content
            h2 Welcome Back!
            h3 To keep connected with us, please login with your personal info.
            a(href="registrationPage.html")
              button(type="submit") Sign up
        .right-container
          form(action="", method="post", @submit="validateForm")
            h1 Sign in
            .form-username
              input(type="text", name="userName", autocomplete="off", placeholder="Type Your Username", v-model="userName")
              Label Your Username
            .form-password
              input(class="visible-input" :type="fieldType", autocomplete="off", name="password", placeholder="Type Your Password", v-model="password")
              Label Your Password
              button(class="visible-button", @click.prevent="switchField" @click="selected = !selected")
                span(v-if="!selected")
                  i(class="fas fa-eye fa-s")
                span(v-else="selected")
                  i(class="fas fa-eye-slash fa-s")
            button(class="send", type="submit" :disabled="!userName || !password")
              span Sign in
            br
            a(class="forget", href="resetPasswordPage.html") Forgot your email or password?
            .error(v-for="error in formErrors") {{ error }}

    include includes/scripts.pug